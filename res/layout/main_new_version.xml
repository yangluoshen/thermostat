<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/mainbg" >

    <RelativeLayout
        android:id="@+id/main_layout1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
         >

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="  "
            android:textSize="30sp"
            android:textColor="#000000" />

        <Spinner
            android:id="@+id/spinner_num"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:background="@drawable/spinnerbg" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/main_layout2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="horizontal"
        android:baselineAligned="false"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="242dp"
            android:background="@drawable/contentbg"
            android:layout_marginTop="30dp"
            android:layout_weight="3"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp" 
                android:layout_weight="1"
                >

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:textSize="20sp"
                    android:text="" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="9" 
                
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" 
                    android:layout_weight="1"
                    >

                    <TextView
                        android:id="@+id/tv_set"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="40dp"
                        android:text="SET"
                        android:textSize="20sp"
                        android:textColor="#000000" />

                    <ImageView
                        android:id="@+id/iv_mark"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/tv_set"
                        android:src="@drawable/displaytemp" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2" 
                   >

                    <TextView
                        android:id="@+id/tv_temperature"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="26dp"
                        android:text="00.0"
                        android:textSize="55sp"
                        android:textColor="#000000" />

                    <ImageView
                        android:id="@+id/iv_degree"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/tv_temperature"
                        android:src="@drawable/temp" />

                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" 
                    
                    android:paddingLeft="40dp"
                    android:paddingRight="80dp">

                    <TextView
                        android:id="@+id/tv_week"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.89"
                        android:text="Week"
                        android:textSize="20sp" 
                        android:textColor="#000000"/>

                    <TextView
                        android:id="@+id/tv_dayofweek"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:text="1"
                        android:textSize="20sp"
                        android:textColor="#000000" />
                    
                    

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3" 
                    android:paddingRight="40dp"
                    >

                    <ImageView
                        android:id="@+id/iv_cold"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:src="@drawable/cold" />

                    <ImageView
                        android:id="@+id/iv_warm"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:visibility="invisible"
                        android:src="@drawable/warm" />

                    <ImageView
                        android:id="@+id/iv_ventilate"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:visibility="invisible"
                        android:src="@drawable/ventilate" />
                    

                </LinearLayout>
                <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" 
                android:layout_weight="1"
                >

                <TextView
                    android:id="@+id/textview2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:textSize="30sp"
                    android:text="" />

            </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical" 
            android:background="@drawable/huxian">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:paddingLeft="10dp"
                android:layout_weight="1"
                android:paddingBottom="10dp" >

                <ImageView
                    android:id="@+id/iv_wind_auto"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/windauto" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:paddingLeft="30dp"
                android:layout_weight="1"
                android:paddingBottom="10dp" >

                <ImageView
                    android:id="@+id/iv_wind3"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:visibility="invisible"
                    android:src="@drawable/wind3" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:paddingLeft="40dp"
                android:layout_weight="1"
                android:paddingBottom="10dp" >

                <ImageView
                    android:id="@+id/iv_wind2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:visibility="invisible"
                    android:src="@drawable/wind2" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:paddingLeft="20dp"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/iv_wind1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:visibility="invisible"
                    android:src="@drawable/wind1" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/main_layout3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
		android:orientation="vertical"
		android:paddingTop="20dp" >
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/iv_up"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/up_sel" />

	        <SeekBar
	            android:id="@+id/skb_temp"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:layout_alignParentBottom="true"
	            android:layout_toLeftOf="@+id/iv_up"
	            android:layout_toRightOf="@+id/iv_down"
	            android:max="40"
	            android:progress="20"
	            android:progressDrawable="@null"
	            android:thumb="@drawable/seekthumb"
	            android:thumbOffset="0dip" />

            <ImageView
                android:id="@+id/iv_down"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:src="@drawable/down_sel" />

        </RelativeLayout>

        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="6dp"

            android:background="@drawable/seekbarbody">

        </LinearLayout>

        

    </LinearLayout>

    <LinearLayout
        android:id="@+id/main_layout4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:layout_gravity="center_vertical"
        android:paddingBottom="10dp">

        <ImageView
            android:id="@+id/iv_menu"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:src="@drawable/menu_sel"
            android:layout_gravity="bottom" />

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:src="@drawable/close_sel"
            android:layout_gravity="bottom" />

        <ImageView
            android:id="@+id/iv_time"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:src="@drawable/time_sel"
            android:layout_gravity="bottom" />

    </LinearLayout>

</LinearLayout>